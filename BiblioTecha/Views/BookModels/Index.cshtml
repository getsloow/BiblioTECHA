@model IEnumerable<BiblioTecha.Models.BookModel>

@{
    ViewData["Title"] = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
<p>Please select "Details" for more information about a specific book, or select a genre already present in the database:</p>

<p>
    @if (User.IsInRole("Teacher")) //
    {
        <a class="btn btn-info" asp-action="Create">Add a new book</a>
    }
</p>

<div class="my-div">
    <h2> Browse by genre:</h2>
    @foreach (var genre in ViewBag.Genres)
    {
        <a  style="text-decoration:none" asp-action="Genre" asp-controller="BookModels" asp-route-gen="@genre">@genre</a> <br />
    }

</div>
<div style="width: 80%; height:40%;  float:right;">

    <div class="main">
        <ul class="cards">
            @foreach (var item in Model)
            {
                <li class="cards_item">
                <a style="text-decoration:none" asp-action="Details" asp-route-id="@item.Id">
                
                    <div class="card">
                        <div class="card_image"><img src="@item.ImageLink" alt=" "></div>
                        <div class="card_content">
                            <h2 class="card_title">@item.Title</h2>
                            <h5>@item.Author</h5>
                            @item.Genre
                            <h4 class="card_title" style="">
                                
                                
                            </h4>
                            <div class="card_text">
                                <p>@item.Description</p>
                               
                                @if (User.IsInRole("Teacher")) //
                                {
                                    <a style="text-decoration:none" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a style="text-decoration:none" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                }
                            </div>
                        </div>
                    </div>
                
                </a>
                </li>
            }
        </ul>
    </div>

</div>


