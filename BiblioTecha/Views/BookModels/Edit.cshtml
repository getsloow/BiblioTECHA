                <label asp-for="ReadingDays" class="control-label">Number of rental days</label>
                <input asp-for="ReadingDays" class="form-control" />
                <span asp-validation-for="ReadingDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageLink" class="control-label">Link to the book cover picture</label>
                <input asp-for="ImageLink" class="form-control" />
                <span asp-validation-for="ImageLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label">Book genre</label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
