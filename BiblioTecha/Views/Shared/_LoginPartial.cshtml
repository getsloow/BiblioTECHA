@using Microsoft.AspNetCore.Identity
@using BiblioTecha.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{

    <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> <font color="#ffc875">Hello @UserManager.GetUserName(User)!</font> </a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "BookModels", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark"><font color="#ffc875">Logout</font> </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register"><font color="#ffc875">Register</font> </a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login"><font color="#ffc875">Login</font> </a>
    </li>
}
</ul>
